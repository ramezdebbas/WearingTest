        										<Path Data="F1 M133.1,17.9 L137.2,13.2 L144.6,19.6 L156.4,5.8 L161.2,9.9 L145.6,28.4 z" Fill="{StaticResource ListViewItemCheckThemeBrush}" FlowDirection="LeftToRight" HorizontalAlignment="Right" Height="13" Margin="0,5.5,5.5,0" Stretch="Fill" VerticalAlignment="Top" Width="15"/>
        									</Grid>
        								</Border>
        								<TextBlock x:Name="MultiArrangeOverlayText" Foreground="{StaticResource ListViewItemDragForegroundThemeBrush}" FontSize="26.667" FontFamily="{StaticResource ContentControlThemeFontFamily}" IsHitTestVisible="False" Margin="18,9,0,0" Opacity="0" TextWrapping="Wrap" Text="{Binding TemplateSettings.DragItemsCount, RelativeSource={RelativeSource Mode=TemplatedParent}}" TextTrimming="WordEllipsis"/>
        							</Grid>
        						</Border>
        					</Grid>
        				</Border>
        			</ControlTemplate>
        		</Setter.Value>
        	</Setter>
        </Style>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid RenderTransformOrigin="0.760999977588654,0.5">
    	<Grid.Background>
    		<ImageBrush ImageSource="ms-appx:/Assets/bg.png"/>
    	</Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Click="GoBack" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Style="{StaticResource PageHeaderTextStyle}" Text="Wearing Test" Foreground="White"/>
            <TextBlock x:Name="iTimerDetail" Style="{StaticResource PageSubheaderTextStyle}" Grid.Column="2" Foreground="#FF0A2751"/>
        </Grid>
        
        <ScrollViewer Name="MainScroll" Margin="120,0,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal">
                
                <Grid x:Name="iQuestionBox" Height="500">
        			<Grid Margin="0,0,0,0" Height="100" VerticalAlignment="Top">
        				<StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
        					<TextBlock HorizontalAlignment="Left" Margin="0" TextWrapping="Wrap" Text="Question:" VerticalAlignment="Top" FontSize="33.333" Foreground="White"/>
        				</StackPanel>
                        <TextBlock x:Name="iQuestion" HorizontalAlignment="Left" Margin="20,40,0,-100" TextWrapping="Wrap" Text="Text Here" VerticalAlignment="Top" FontSize="33.333" Foreground="White" Width="630" Height="100"/>
        				<!--<Button Content="Next &gt;&gt;" Margin="0" VerticalAlignment="Stretch" Width="75" d:LayoutOverrides="Height" HorizontalAlignment="Right" BorderThickness="0" Padding="0,0,0,2" FontSize="18.667" Background="{x:Null}" Foreground="#FF8CCCFF"/>-->
        			</Grid>
        			<Grid HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="650" Height="350">
        				<Grid x:Name="Flag1" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Tapped="Flag1_Tapped">
        					<GridViewItem HorizontalAlignment="Left" Margin="0" d:LayoutOverrides="Height">
        						<Rectangle Margin="0" Stretch="Fill" Height="162" Width="300">
        							<Rectangle.Fill>
        								<ImageBrush x:Name="iChoice1" ImageSource="Assets/img1.png"/>
        							</Rectangle.Fill>
        						</Rectangle>
        					</GridViewItem>
        				</Grid>
        				<Grid x:Name="Flag2" HorizontalAlignment="Right" Margin="10,0,0,0" VerticalAlignment="Top" Tapped="Flag2_Tapped">
        					<GridViewItem HorizontalAlignment="Left" Margin="0" d:LayoutOverrides="Height">
        						<Rectangle Margin="0" Stretch="Fill" Height="162" Width="300">
        							<Rectangle.Fill>
        								<ImageBrush x:Name="iChoice2" ImageSource="Assets/img2.png"/>
        							</Rectangle.Fill>
        						</Rectangle>
        					</GridViewItem>
        				</Grid>
        				<Grid x:Name="Flag3" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Bottom" Tapped="Flag3_Tapped">
        					<GridViewItem HorizontalAlignment="Left" Margin="0" d:LayoutOverrides="Height">
        						<Rectangle Margin="0" Stretch="Fill" Height="162" Width="300">
        							<Rectangle.Fill>
        								<ImageBrush x:Name="iChoice3" ImageSource="Assets/img3.png"/>
        							</Rectangle.Fill>
        						</Rectangle>
        					</GridViewItem>
        				</Grid>
        				<Grid x:Name="Flag4" VerticalAlignment="Bottom" Tapped="Flag4_Tapped" HorizontalAlignment="Right">
        					<GridViewItem HorizontalAlignment="Left" Margin="0" d:LayoutOverrides="Height">
        						<Rectangle Margin="0" Stretch="Fill" Height="162" Width="300">
        							<Rectangle.Fill>
        								<ImageBrush x:Name="iChoice4" ImageSource="Assets/img4.png"/>
        							</Rectangle.Fill>
        						</Rectangle>
        					</GridViewItem>
        				</Grid>
        			</Grid>
                
        			<Grid x:Name="Correct" Height="236" Margin="0,65,0,0" Width="406" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed" Tapped="Correct_Tapped" Background="#CC0A2751">
        				<Grid.RenderTransform>
        					<CompositeTransform/>
        				</Grid.RenderTransform>
        				<Image x:Name="iCorrectImage" Margin="0,10,0,0" Source="Assets/CorrectImage.png" HorizontalAlignment="Center" Width="294" Height="135" VerticalAlignment="Top"/>
                        <Image x:Name="iWrongImage" Margin="0,10,0,0" Source="Assets/wrongImage.png" HorizontalAlignment="Center" Width="294" Height="135" VerticalAlignment="Top"/>
        				<TextBlock x:Name="iAnswerStatus" Margin="0,0,0,20" TextWrapping="Wrap" Text="Textblock" FontFamily="Segoe UI" FontSize="53.333" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="White"/>
        			</Grid>
        		</Grid>
                
                <Grid x:Name="iPauseBox" Height="500" Width="650" Visibility="Collapsed" >
                    <TextBlock Text="Paused" FontSize="50" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"  />
                </Grid>
                
        		<StackPanel Margin="30,0,0,0" VerticalAlignment="Bottom">
        			<StackPanel Orientation="Horizontal">
                        <GridViewItem Margin="0" x:Name="iPlayButton" Tapped="OnPlayClick" Style="{StaticResource GridViewItemStyle2}" ToolTipService.ToolTip="Play the Game">
        					<Image Height="157" Source="Assets/btn2.png" Stretch="Fill" Margin="0"/>
        				</GridViewItem>
                        <GridViewItem Margin="0" x:Name="iPauseButton" Tapped="OnPauseClick" Style="{StaticResource GridViewItemStyle3}" ToolTipService.ToolTip="Pause the Game">
                            <Image Height="157" Source="Assets/btn3.png" Stretch="Fill"/>
                        </GridViewItem>
                    </StackPanel>
        			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <GridViewItem Margin="0" Tapped="OnStopClick" Style="{StaticResource GridViewItemStyle4}" ToolTipService.ToolTip="Restart the Game">
        					<Image Height="153" Source="Assets/btn4.png" Stretch="Fill" Margin="0"/>
        				</GridViewItem>
        			</StackPanel>
        		</StackPanel>
        	</StackPanel>
        </ScrollViewer>

        <Grid x:Name="gridSnap" Visibility="Collapsed" Grid.Row="1">
            <StackPanel Margin="15,0,20,20" Orientation="Vertical" d:LayoutOverrides="Height">
                <TextBlock Foreground="#000000" TextWrapping="Wrap" FontSize="22" Margin="0,200,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" >
                    <Run Text="Please switch to full screen to view the details."/>
                    <LineBreak/>
                    <Run/>
                    <LineBreak/>
                    <Run Text="" />
                    <LineBreak/>
                    <Run/>
                    <LineBreak/>
                    <LineBreak/>
                    <Run/>
                    <LineBreak/>
                </TextBlock>
            </StackPanel>
            <Image Margin="0,495,0,0" Source="Assets/Images/bg.jpg" Stretch="Fill"/>
        </Grid>
        
        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup>
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="gridSnap" Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MainScroll" Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>